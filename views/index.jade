extends layout

block content
  ul
    each bet in bets
      li(style="background:#"+bet.color)
        a(href=bet.id)= bet.bet+" ("+bet.date+")"

block post
  if isAuthenticated
    form(action='/post',method='post')
      input(id='bet',type='text',value='',placeholder='Skriv in ditt bet h√§r',name='bet')
      input(id='date',class='date',type='date', name='date')
